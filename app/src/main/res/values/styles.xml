<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="SplashActivityTexViewStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="LoginActivityTextViewStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="LoginActivityEditTextStyle">
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@drawable/background_edt_login</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="SignUpActivityLinearStyle">
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
    </style>

    <style name="SignUpActivityEditTextStyle">
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:background">@drawable/background_edt_sign_up</item>
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
    </style>

    <style name="DashboardTextViewLabel">
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlueDark</item>
    </style>

    <style name="TripInfoEditText">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TripInfoTextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:lineSpacingExtra">@dimen/_3sdp</item>
    </style>

    <style name="MoreTextView">
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ProfileTextViewLable">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileTextViewContent">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorGrayDark</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
