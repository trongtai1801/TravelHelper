<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/custom_appbar_layout_dark"></include>
        <RelativeLayout
                app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tv_total_result_hosts"
                    android:text="@string/host"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_height_edit_text"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_hosts"
                    android:layout_below="@id/tv_total_result_hosts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->

</android.support.design.widget.CoordinatorLayout>