<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/ln_item_friend"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45ssp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cir_img_avatar_friends"
                android:src="@drawable/ic_user_circle"
                android:padding="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tv_user_name_friends"
                    android:text="@string/friend"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_15ssp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            <TextView
                    android:id="@+id/tv_status_friend"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/ios_red"
                    android:text="@string/waiting"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
        </LinearLayout>


        <ImageView
                android:id="@+id/img_more_friend"
                android:src="@drawable/ic_more"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20ssp"/>

    </LinearLayout>

    <View
            android:background="@color/dark_gray"
            android:layout_below="@id/ln_item_friend"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>


</RelativeLayout>