<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            app:layout_constraintBottom_toTopOf="@id/ln_user_name"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/custom_appbar_layout_dark"/>

    <LinearLayout
            android:id="@+id/ln_user_name"
            android:orientation="horizontal"
            style="@style/SignUpActivityLinearStyle"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sign_up_height_edt">

        <EditText
                android:id="@+id/edt_sign_up_user_name"
                android:hint="@string/user_name"
                style="@style/SignUpActivityEditTextStyle"
                android:layout_weight="11"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/ic_sign_up_user_name"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ln_password"
            android:orientation="horizontal"
            style="@style/SignUpActivityLinearStyle"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ln_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sign_up_height_edt">

        <EditText
                android:id="@+id/edt_sign_up_password"
                android:inputType="textPassword"
                android:hint="@string/password"
                style="@style/SignUpActivityEditTextStyle"
                android:layout_weight="11"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/ic_sign_up_password"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ln_full_name"
            android:orientation="horizontal"
            style="@style/SignUpActivityLinearStyle"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ln_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sign_up_height_edt">

        <EditText
                android:id="@+id/edt_sign_up_full_name"
                android:hint="@string/full_name"
                style="@style/SignUpActivityEditTextStyle"
                android:layout_weight="11"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/ic_sign_up_full_name"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ln_email"
            android:orientation="horizontal"
            style="@style/SignUpActivityLinearStyle"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ln_full_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sign_up_height_edt">

        <EditText
                android:id="@+id/edt_sign_up_email"
                android:hint="@string/email"
                style="@style/SignUpActivityEditTextStyle"
                android:layout_weight="11"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/ic_sign_up_email"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
            android:id="@+id/btn_sign_up_submit"
            android:textAllCaps="false"
            android:text="@string/sign_up"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_btn_sign_up"
            android:layout_marginBottom="@dimen/_30sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/sign_up_height_edt"/>

</android.support.constraint.ConstraintLayout>