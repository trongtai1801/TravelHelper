<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/custom_appbar_layout_dark"></include>

    <TextView
            android:id="@+id/tv_notify"
            android:layout_below="@+id/app_bar_layout"
            android:visibility="gone"
            style="@style/TripInfoTextView"
            android:text="@string/warning_post_public_trip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"/>

    <LinearLayout
            android:id="@+id/ln_destination"
            android:layout_below="@id/tv_notify"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trip_info_height_edt">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cir_img_host_avatar"
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_user_circle"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp">
            <TextView
                    android:id="@+id/tv_host_name"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            <TextView
                    android:id="@+id/tv_host_address"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
            android:id="@+id/view_destination"
            android:layout_below="@id/ln_destination"
            android:background="@color/colorGray"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>

    <LinearLayout
            android:id="@+id/ln_arrival"
            android:layout_below="@id/view_destination"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trip_info_height_edt">
        <ImageView
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_arrival"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/tv_arrival"
                android:hint="@string/when_arrival"
                style="@style/TripInfoEditText"
                android:background="@color/colorWhite"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"/>
    </LinearLayout>
    <View
            android:id="@+id/view_arrival"
            android:layout_below="@id/ln_arrival"
            android:background="@color/colorGray"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>

    <LinearLayout
            android:id="@+id/ln_departure"
            android:layout_below="@id/view_arrival"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trip_info_height_edt">
        <ImageView
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_departure"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/tv_departure"
                android:hint="@string/when_departure"
                style="@style/TripInfoEditText"
                android:background="@color/colorWhite"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"/>
    </LinearLayout>
    <View
            android:id="@+id/view_departure"
            android:layout_below="@id/ln_departure"
            android:background="@color/colorGray"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>

    <LinearLayout
            android:id="@+id/ln_num_traveler"
            android:layout_below="@id/view_departure"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trip_info_height_edt">
        <ImageView
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_user"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_num_traveler"
                android:hint="Number travelers"
                style="@style/TripInfoEditText"
                android:background="@color/colorWhite"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_sub_num_traveler"
                android:src="@drawable/ic_sub"
                android:layout_margin="@dimen/_2sdp"
                android:padding="@dimen/_2sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_add_num_traveler"
                android:src="@drawable/ic_add"
                android:layout_margin="@dimen/_2sdp"
                android:padding="@dimen/_2sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>