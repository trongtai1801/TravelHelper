<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_lb_overview_profile"
                    android:text="@string/overview"
                    android:layout_marginTop="@dimen/_15sdp"
                    style="@style/ProfileTextViewLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/ln_address_profile"
                    android:orientation="horizontal"
                    android:layout_below="@id/tv_lb_overview_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_height_content_textview">

                <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_maker"
                        android:padding="@dimen/profile_padding_icon"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_content_address_profile"
                        android:hint="@string/address"
                        style="@style/MoreTextView"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ln_birthday_profile"
                    android:orientation="horizontal"
                    android:layout_below="@id/ln_address_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_height_content_textview">

                <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"
                        android:padding="@dimen/profile_padding_icon"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_content_birthday_profile"
                        android:hint="@string/birthday"
                        style="@style/MoreTextView"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ln_gender_profile"
                    android:orientation="horizontal"
                    android:layout_below="@id/ln_birthday_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_height_content_textview">

                <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_gender"
                        android:padding="@dimen/profile_padding_icon"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_content_gender_profile"
                        style="@style/MoreTextView"
                        android:hint="@string/gender"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ln_occupation_profile"
                    android:orientation="horizontal"
                    android:layout_below="@id/ln_gender_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_height_content_textview">

                <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_occupation"
                        android:padding="@dimen/profile_padding_icon"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_content_occupation_profile"
                        style="@style/MoreTextView"
                        android:hint="@string/occupation"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ln_fluence_profile"
                    android:orientation="horizontal"
                    android:layout_below="@id/ln_occupation_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_height_content_textview">

                <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_fluence_language"
                        android:padding="@dimen/profile_padding_icon"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_content_fluence_profile"
                        style="@style/MoreTextView"
                        android:hint="@string/fluence_language"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ln_learning_profile"
                    android:orientation="horizontal"
                    android:layout_below="@id/ln_fluence_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_height_content_textview">

                <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_learning_language"
                        android:padding="@dimen/profile_padding_icon"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_content_learning_profile"
                        style="@style/MoreTextView"
                        android:hint="@string/learning_language"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:id="@+id/view_overview"
                    android:layout_below="@id/ln_learning_profile"
                    android:background="@color/colorGrayDark"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

            <TextView
                    android:id="@+id/tv_lb_about_me_profile"
                    android:text="@string/about_me"
                    android:layout_below="@id/view_overview"
                    android:layout_marginTop="@dimen/_10sdp"
                    style="@style/ProfileTextViewLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_content_about_me_profile"
                    style="@style/ProfileTextViewContent"
                    android:hint="@string/interest"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_below="@id/tv_lb_about_me_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:id="@+id/view_about_me"
                    android:layout_below="@id/tv_content_about_me_profile"
                    android:background="@color/colorGrayDark"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

            <TextView
                    android:id="@+id/tv_lb_interest_profile"
                    android:text="@string/interest"
                    android:layout_below="@id/view_about_me"
                    android:layout_marginTop="@dimen/_10sdp"
                    style="@style/ProfileTextViewLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_content_interest_profile"
                    style="@style/ProfileTextViewContent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:hint="@string/interest"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_below="@id/tv_lb_interest_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:id="@+id/view_interest"
                    android:layout_below="@id/tv_content_interest_profile"
                    android:background="@color/colorGrayDark"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

            <TextView
                    android:id="@+id/tv_lb_photos_profile"
                    android:text="@string/photos"
                    android:layout_below="@id/view_interest"
                    android:layout_marginTop="@dimen/_10sdp"
                    style="@style/ProfileTextViewLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:id="@+id/view_photos"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_below="@id/tv_lb_photos_profile"
                    android:background="@color/colorGrayDark"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

            <TextView
                    android:id="@+id/tv_lb_reference_profile"
                    android:text="@string/references"
                    android:layout_below="@id/view_photos"
                    android:layout_marginTop="@dimen/_10sdp"
                    style="@style/ProfileTextViewLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:id="@+id/view_reference"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_below="@id/tv_lb_reference_profile"
                    android:background="@color/colorGrayDark"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

            <TextView
                    android:id="@+id/tv_lb_home_profile"
                    android:text="@string/home"
                    android:layout_below="@id/view_reference"
                    android:layout_marginTop="@dimen/_10sdp"
                    style="@style/ProfileTextViewLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:id="@+id/view_home"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_below="@id/tv_lb_home_profile"
                    android:background="@color/colorGrayDark"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                    android:id="@+id/img_avatar_toolbar"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_cover"
                    app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_show_profile"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_photo_white"
            app:layout_anchor="@id/app_bar_layout"
            app:layout_anchorGravity="bottom|right"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_edit_profile"
            android:src="@drawable/ic_pen_white"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:layout_anchor="@id/tv_lb_home_profile"
            app:layout_anchorGravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</android.support.design.widget.CoordinatorLayout>