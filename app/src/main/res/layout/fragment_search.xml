<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:id="@+id/cv_host"
            android:layout_marginTop="@dimen/_30sdp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_total_host_item_search"
                    android:text="@string/host"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <ImageView
                        android:id="@+id/img_first_host"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:id="@+id/img_second_host"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:id="@+id/img_third_host"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/cv_traveler"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@id/cv_host"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_total_traveler_item_search"
                    android:text="@string/travelers"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <ImageView
                        android:id="@+id/img_first_traveler"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:id="@+id/img_second_traveler"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:id="@+id/img_third_traveler"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>